Codeine="/usr/share/php/Codeine"

case "$1" in

"project" )
    case "$2" in

    "new" )
        mkdir $3
        cd $3
        echo "Создаём структуру папок разработчика"
        mkdir src docs dev design build etc tests
        cd src
        echo "Создаём структуру папок проекта"
        mkdir Data Drivers Options Assets Public
        cd Public
        echo "Создаём кэш"
        mkdir -p uploads cache/js cache/css cache/thumbs cache/captcha
        echo "Выставляем права"
        chmod -R 777 uploads cache
        echo "Копируем точку входа"
        cp $Codeine/Public/index.php .
        echo "Прописываем виртуальный хост"
        echo "127.0.0.1 $3.local" >> /etc/hosts
    ;;
    esac
;;

esac