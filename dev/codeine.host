<VirtualHost *:80>
   DocumentRoot /var/www/Codeine/src
   ServerName codeine

   # This should be omitted in the production environment
   SetEnv Environment development

   <Directory /var/www/Codeine/src>
       Options Indexes MultiViews FollowSymLinks
       AllowOverride All
       Order allow,deny
       Allow from all
   </Directory>

</VirtualHost>