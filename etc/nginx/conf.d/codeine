    charset utf-8;
	index  index.php;

    merge_slashes on;
    server_tokens off;

    log_not_found on;
    error_log /var/log/nginx/error.log warn;
    access_log /var/log/nginx/$host.access.log codeine;

    gzip on;
    gzip_comp_level 9;
    gzip_disable "msie6";
    gzip_min_length 1024;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;
    gzip_vary on;

	location /
	{
		try_files $uri $uri/ /index.php?$uri&$args;
	}

    location ~ ^/cache/(.*)
    {
        alias /tmp/codeine/$host/$1;
        access_log        off;
        expires           max;
    }

	location ~ index.php$
	{
	    include fastcgi_params;

        if ($http_user_agent ~* (bot|crawl|\+http:))
        {
            access_log /var/log/nginx/$host.bots.log;
        }

        fastcgi_keep_conn on;

        fastcgi_param  Environment $Environment;
		fastcgi_pass   $Backend;
		fastcgi_index  index.php;

        fastcgi_param  DOCUMENT_ROOT    $document_root;
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        fastcgi_param  PATH_TRANSLATED  $document_root$fastcgi_script_name;

        fastcgi_param  QUERY_STRING     $query_string;
        fastcgi_param  REQUEST_METHOD   $request_method;
        fastcgi_param  CONTENT_TYPE     $content_type;
        fastcgi_param  CONTENT_LENGTH   $content_length;

        fastcgi_intercept_errors        on;
        fastcgi_ignore_client_abort     off;
        fastcgi_connect_timeout 60;
        fastcgi_send_timeout 180;
        fastcgi_read_timeout 180;
        fastcgi_buffer_size 1m;
        fastcgi_buffers 4 1m;
        fastcgi_busy_buffers_size 1m;
        fastcgi_temp_file_write_size 1m;
	}

    location ~* \.(jpg|jpeg|gif|css|png|js|ico|woff|ttf|eot)$
	{
		access_log        off;
		expires           max;
		add_header        Cache-Control  public;
	}
