{
    "Mixins":
    [
        "Mixins.Titled",
        "Mixins.Text"
    ],
    "Storage": "Primary",
    "Nodes":
    {
        "ID":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    },
    "Hooks":
    {
        "beforeUpdateGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.HTTP",
                "Method": "StoreURL"
            }
        },
        "afterUpdatePost":
        {
            "Redirect URL":
            {
                "Service": "System.Interface.HTTP",
                "Method": "Redirect",
                "Call":
                {
                    "Redirect": "/control/$Entity/Show/$Data.0.ID"
                }
            }
        }
    }
}