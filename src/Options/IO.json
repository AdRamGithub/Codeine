{
    "Storages":
    {
        "MySQL":
        {
            "Driver": "IO.Storage.MySQL",
            "Server":"localhost",
            "Database":"Codeine",
            "User":"root",
            "Password":"phoenix",
            "Charset":"utf8"
        },
        "Session":
        {
            "Driver": "IO.Storage.Redis",
            "Scope": "Session",
            "TTL": 0
        },
        "Test":
        {
            "Driver": "IO.Test"
        },
        "Options":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Layout":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets"
        },
        "Locale":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Image":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".png"
        },
        "Image Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Public",
            "Scope":"images",
            "Suffix":".png"
        },
        "CSS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".css"
        },
        "CSS Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Public",
            "Scope":"css",
            "Suffix":".css"
        },
        "LESS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".less"
        },
        "JS":{
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".js"
        },
        "JS Cache":{
            "Driver":"IO.Storage.Directory",
            "Directory":"Public",
            "Scope":"js",
            "Suffix":".js"
        },
        "Run Cache":
        {
            "Driver":"IO.Storage.XCache"
        },
        "Run Queue":
        {
            "Driver":"IO.Queue.SPL"
        },
        "Developer":
        {
            "Driver":"IO.Log.Echo"
        },
        "EMail":
        {
            "Driver": "IO.Transport.Mail",
            "Headers":
            {
                "From:": "Codeine"
            }
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.Curl",
            "Timeout": 15,
            "CookieFile": "cookie.txt",
            "Follow": true,
            "Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Data",
                "Scope":"Cache"
            }
        }
    },
    "Hooks":
    {
        "Storage":
        {
            "NotFound":
            {

            }
        }
    }
}
