{
    "Storages":
    {
        "Primary":
        {
            "Driver": "IO.Storage.Memory"
        },
        "Options":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Layout":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix": ".html"
        },
        "Locale":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Image":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets"
        },
        "Image Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/cache",
            "Scope":"images"
        },
        "CSS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".css"
        },
        "CSS Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/cache",
            "Scope":"css",
            "Suffix":".css"
        },
        "JS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".js"
        },
        "JS Cache":{
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/cache",
            "Scope":"js",
            "Suffix":".js"
        },
        "Developer":
        {
            "Driver":"IO.Null"
        },
        "EMail":
        {
            "Driver": "IO.Transport.Mail",
            "Headers":
            {
                "From:": "Codeine"
            }
        },
        "File":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Public/uploads",
            "Public": "uploads"
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.Curl",
            "Scope": "",
            "Timeout": 15,
            "CookieFile": "cookie.txt",
            "Follow": true
        }
    },
    "Hooks":
    {
        "beforeIORead":
        {
            "Dedup":
            {
                "Service": "IO.Dedup",
                "Method": "beforeIORead"
            }
        },
        "afterIORead":
        {
            "Dedup":
            {
                "Service": "IO.Dedup",
                "Method": "afterIORead"
            }
        },
        "Storage":
        {
            "Open":
            {
                "Failed":
                {
                    "Error500":
                    {
                        "Service": "Error.500",
                        "Method": "Die"
                    }
                }
            }
        }
    }
}
