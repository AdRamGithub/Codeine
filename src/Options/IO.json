{
    "Verbosity":
    {
        "Not found": 6
    },
    "Storages":
    {
        "Primary":
        {
            "Driver": "IO.Storage.Memory"
        },
        "Options":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Layout":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix": ".html"
        },
        "Locale":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Image":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets"
        },
        "Image Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine"
        },
        "CSS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".css"
        },
        "CSS Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine",
            "Suffix":".css"
        },
        "JS":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix":".js"
        },
        "JS Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine",
            "Suffix":".js"
        },
        "Developer":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "developer"
        },
        "Security":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "security"
        },
        "DBA":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "dba"
        },
        "EMail":
        {
            "Driver": "IO.Transport.Mail",
            "Headers":
            {
                "From:": "Codeine"
            }
        },
        "File":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Public/uploads",
            "Public": "uploads"
        },
        "Upload":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Data",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.CURL",
            "Scope": ""
        }
    },
    "Hooks":
    {
        "beforeIORead":
        {
            "Check":
            {
                "Service": "IO.Dedup",
                "Method": "beforeIORead"
            }
        },
        "afterIORead":
        {
            "Save":
            {
                "Service": "IO.Dedup",
                "Method": "afterIORead"
            }
        },
        "Storage":
        {
            "Open":
            {
                "Failed":
                {
                    "Error 500":
                    {
                        "Service": "Error.500",
                        "Method": "Page",
                        "Call":
                        {
                            "Message": "Storage Open Failed"
                        }
                    }
                }
            }
        }
    }
}
