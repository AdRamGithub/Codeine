{
    "Verbosity":
    {
        "Not found": 6
    },
    "Storages":
    {
        "Output":
        {
            "Driver": "IO.Print"
        },
        "Primary":
        {
            "Driver": "IO.Storage.Memory",
            "Description": "Default storage for all important data"
        },
        "Permanent":
        {
            "Description": "Storage for source-based data",
            "Driver":"IO.Storage.Directory",
            "Directory":"Data",
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
        "Cookie":
        {
            "Driver":"IO.Storage.Cookie",
            "TTL": 86400,
            "Path": "/",
            "Secure": false,
            "HTTP Only": true
        },
        "Options":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
        "Run Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine/run",
            "Directory Hashing":
            {
                "Enabled": true,
                "Levels": 4
            },
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
        "Scraped":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine/scraped",
            "Directory Hashing":
            {
                "Enabled": true,
                "Levels": 4
            },
            "Postfix":".html"
        },
        "Layout":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Postfix": ".html"
        },
        "Locale":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
            "Image":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets"
            },
            "Image Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine"
            },
            "LESS":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets",
                "Postfix":".less"
            },
            "CSS":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets",
                "Postfix":".css"
            },
            "CSS Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine"
            },
            "JS":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets",
                "Postfix":".js"
            },
            "JS Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine"
            },
        "EMail":
        {
            "Driver": "IO.Transport.Mail.SMTP"
        },
        "Upload":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Data",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Static Sitemaps":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Public/sitemap",
            "Postfix": ".xml"
        },
        "Uploader":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Public/uploads",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.CURL",
            "Scope": ""
        },
        "Delayed":
        {
            "Driver":"IO.Queue.File.JSON",
            "Directory":"/var/spool/codeine",
            "Scope": "Codeine",
            "Filename": "delayed.json"
        },
        "Bus":
        {
            "Driver":"IO.Queue.File.JSON",
            "Directory":"/tmp/codeine/bus",
            "Scope": "Codeine",
            "Filename": ".json"
        },
        "Swarm":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine/",
            "Postfix": ".json",
            "Format": "Formats.JSON"
        },
        "HTTP Journal":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/var/log/codeine/",
            "Postfix": ".json",
            "Format": "Formats.JSON"
        },
        "Redis":
        {
            "Driver": "IO.Storage.Redis"
        }
    },
    "Hooks":
    {
        "beforeIOWrite":
        {
            "Journaling for writes":
            {
                "Service": "IO.Hooks.Journal",
                "Method": "beforeIOWrite"
            }
        }
    }
}
