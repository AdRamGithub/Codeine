{
    "Contract":
    {
        "IO":
        {
            "Read":
            {
                "Memo": ["Storage", "Scope", "Where", "Time"]
            }
        }
    },
    "Verbosity":
    {
        "Not found": 6
    },
    "Storages":
    {
        "Output":
        {
            "Driver": "IO.Print"
        },
        "Primary":
        {
            "Driver": "IO.Storage.Memory",
            "Description": "Default storage for all important data"
        },
        "Permanent":
        {
            "Description": "Storage for source-based data",
            "Driver":"IO.Storage.Directory",
            "Directory":"Data",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Cookie":
        {
            "Driver":"IO.Storage.Cookie",
            "TTL": 86400,
            "Path": "/",
            "Secure": false,
            "HTTP Only": true
        },
        "Options":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "SOAP Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Run Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Application Cache":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"/tmp/codeine",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
        "Layout":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Suffix": ".html"
        },
        "Locale":
        {
            "Driver":"IO.Storage.Directory",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Suffix":".json"
        },
            "Image":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets"
            },
            "Image Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine"
            },
            "CSS":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets",
                "Suffix":".css"
            },
            "CSS Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine",
                "Suffix":".css"
            },
            "JS":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"Assets",
                "Suffix":".js"
            },
            "JS Cache":
            {
                "Driver":"IO.Storage.Directory",
                "Directory":"/tmp/codeine",
                "Suffix":".js"
            },
        "Developer":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "developer",
            "Format": "Formats.Log.Plain"
        },
        "Profiler":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "profiler",
            "Format": "Formats.Log.RAW"
        },
        "Security":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "security",
            "Format": "Formats.Log.Plain"
        },
        "Administrator":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "administrator",
            "Format": "Formats.Log.Plain"
        },
        "Marketing":
        {
            "Driver":"IO.Log.File",
            "Directory":"/var/log/codeine",
            "Scope": "marketing",
            "Format": "Formats.Log.Plain"
        },
        "EMail":
        {
            "Driver": "IO.Transport.Mail"
        },
        "Upload":
        {
            "Driver": "IO.Storage.Directory",
            "Directory": "Data",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.CURL",
            "Scope": ""
        },
        "Delayed":
        {
            "Driver":"IO.Queue.File.JSON",
            "Directory":"/var/spool/codeine",
            "Scope": "Codeine",
            "Filename": "delayed.json"
        },
        "Bus":
        {
            "Driver":"IO.Queue.File.JSON",
            "Directory":"/tmp/codeine/bus",
            "Scope": "Codeine",
            "Filename": ".json"
        }
    },
    "Hooks":
    {
        "Storage":
        {
            "Open":
            {
                "-Failed":
                {
                    "Error 500":
                    {
                        "Service": "Error.500",
                        "Method": "Page",
                        "Call":
                        {
                            "Message": "Storage Open Failed"
                        }
                    }
                }
            }
        }
    }
}
