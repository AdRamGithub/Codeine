{
    "Regex":
    {
        "Company":
        {
            "Match": "^/company$",
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Company",
                "Where":
                {
                    "ID": 1
                }
            }
        },
         "Companies w/pages":
        {
            "Match": "/companies/page(\\d+)$",
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Company",
                "Page": "$1"
            }
        },
        "Companies":
        {
            "Match": "/companies$",
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Company"
            }
        },
        "Show company":
        {
            "Match":"^/company/(.+)$",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Call":
            {
                "Entity": "Company",
                "Where":
                {
                    "Slug": "$1"
                }
            },
            "Last": true
        }
    }
}