{
    "Regex":
    {
        "Articles w/pagess":
        {
            "Match":"/articles/page/(.*)",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Article",
                "Page":  "$1",
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Articles Category w/pages":
        {
            "Match":"^/articles/category/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Articles Category":
        {
            "Match":"^/articles/category/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Articles by author w/pages":
        {
            "Match":"^/articles/author/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "Articles by author":
        {
            "Match":"^/articles/author/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "Articles Category RSS":
        {
            "Match":"/articles/category/(.*).rss",
            "Weight": 44,
            "Service":"Entity.List",
            "Method":"Do",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.RSS",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "Article",
                "Where":
                {
                    "Category": "$1"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Article":
        {
            "Match":"/article/(.*)",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Weight": 40,
            "Call":
            {
                "Entity": "Article",
                "Where":
                {
                    "Slug":  "$1"
                }
            }
        }
    }
}