{
    "Regex":
    {
        "Страница статей":
        {
            "Match":"/articles/page/(.*)",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Article",
                "Page":  "$1",
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Категория статей":
        {
            "Match":"^/articles/category/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Категория статей, страницы":
        {
            "Match":"^/articles/category/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Автор статей":
        {
            "Match":"^/articles/author/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "Автор статей, страницы":
        {
            "Match":"^/articles/author/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "RSS категории статей":
        {
            "Match":"/articles/category/(.*).rss",
            "Weight": 44,
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Renderer":
                {
                    "Service": "View.RSS",
                    "Method": "Render"
                },
                "Title": "Статьи",
                "Description": "Интересное о",
                "Entity": "Article",
                "Where":
                {
                    "Category": "$1"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Статья":
        {
            "Match":"/article/(.*)",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Weight": 40,
            "Call":
            {
                "Entity": "Article",
                "Where":
                {
                    "Slug":  "$1"
                }
            }
        }
    }
}