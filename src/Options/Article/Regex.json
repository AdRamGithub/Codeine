{
    "Regex":
    {
        "Articles list":
        {
            "Match": "/articles$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Article",
                "PageURL": "/articles/page/",
                "Sort":
                {
                    "Created": false
                }
            }
        },
        "Articles Tags":
        {
            "Match":"^/articles/tags/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Tags"
                },
                "Where":
                {
                    "Tags":  "$1"
                }
            }
        },
        "Articles by author":
        {
            "Match":"^/articles/author/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Article",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "Articles Tags RSS":
        {
            "Match":"/articles/tags/(.*).rss",
            "Weight": 44,
            "Service":"Entity.List",
            "Method":"Do",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.RSS",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "Article",
                "Where":
                {
                    "Tags": "$1"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Article":
        {
            "Match":"/article/(.*)",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Weight": 40,
            "Call":
            {
                "Entity": "Article",
                "Where":
                {
                    "Slug":  "$1"
                }
            }
        }
    }
}