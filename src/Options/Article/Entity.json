{
    "Mixins": ["Mixins.UGC", "Mixins.SEO", "Mixins.Text", "Mixins.CRUD"],
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Integer",
                    "Method": "Get"
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Required": true,
            "Filter":
            {
                "Beauty":
                {
                    "Service": "Text.Beautifier",
                    "Method": "Process"
                }
            },
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Slug":
        {
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate",
                    "Call":
                    {
                        "Key": "Title",
                        "Delimiter": "-",
                        "Transliteration":
                        {
                            "Service":"Text.Transform.Transliterate.Simple",
                            "Method": "Do",
                            "Call":
                            {
                                "From":"Russian",
                                "To": "English"
                            }
                        }
                    }
                }
            }
        }
    }
}