{
    "Regex":
    {
        "Search JSON":
        {
            "Match": "^/search/json/(.+)/(.+)$",
            "Weight": 100,
            "Service": "Search",
            "Method": "Query",
            "Call":
            {
                "Provider": "$1",
                "Query": "$2",
                "View":
                {
                    "Renderer":
                    {
                        "Service": "View.JSON"
                    }
                }
            }
        },
        "Search":
        {
            "Match": "^/search/(.+)/(.+)$",
            "Weight": 80,
            "Service": "Search",
            "Method": "Query",
            "Call":
            {
                "Provider": "$1",
                "Query": "$2"
            }
        },
        "Vertical Search":
        {
            "Match": "^/search/(.*)$",
            "Weight": 60,
            "Service": "Search",
            "Method": "Query",
            "Call":
            {
                "Vertical": true,
                "Query": "$1"
            }
        }
    }
}