{
    "Regex":
    {
        "Страница списка блога":
        {
            "Match":"^/blog/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Blog",
                "Page":  "$1",
                "Sort":
                {
                    "Created": "DESC"
                }
            },
            "Zone": ["Project"]
        },
        "Категория блога":
        {
            "Match":"^/blog/category/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            },
            "Zone": ["Project"]
        },
        "Категория блога, страницы":
        {
            "Match":"^/blog/category/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            },
            "Zone": ["Project"]
        },
        "Автор блога":
        {
            "Match":"^/blog/author/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            },
            "Zone": ["Project"]
        },
        "Автор блога, страницы":
        {
            "Match":"^/blog/author/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            },
            "Zone": ["Project"]
        },
        "RSS категории блога":
        {
            "Match":"^/blog/category/(.*).rss$",
            "Weight": 44,
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Renderer": "View.RSS",
                "Title": "Блог ONE2TEAM",
                "Description": "Интересное о web-разработке",
                "Entity": "Blog",
                "Where":
                {
                    "Category": "$1"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            },
            "Zone": ["Project"]
        },
        "Блог":
        {
            "Match":"^/blog/(.*)$",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Call":
            {
                "Entity": "Blog",
                "Where":
                {
                    "Slug":  "$1"
                }
            },
            "Last": true,
            "Zone": ["Project"]
        }
    }
}