{
    "Regex":
    {
        "Страница списка блога":
        {
            "Match":"^/blog/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Blog",
                "Page":  "$1",
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Категория блога":
        {
            "Match":"^/blog/category/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Категория блога, страницы":
        {
            "Match":"^/blog/category/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Category"
                },
                "Where":
                {
                    "Category":  "$1"
                }
            }
        },
        "Автор блога":
        {
            "Match":"^/blog/author/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "Автор блога, страницы":
        {
            "Match":"^/blog/author/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "Author"
                },
                "Where":
                {
                    "User":  "$1"
                }
            }
        },
        "RSS категории блога":
        {
            "Match":"^/blog/category/(.*).rss$",
            "Weight": 44,
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Renderer":
                {
                    "Service": "View.RSS",
                    "Method": "Renderer"
                },
                "Title": "Блог ONE2TEAM",
                "Description": "Интересное о web-разработке",
                "Entity": "Blog",
                "Where":
                {
                    "Category": "$1"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Блог-пост":
        {
            "Match":"^/blog/(.*)$",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Call":
            {
                "Entity": "Blog",
                "Where":
                {
                    "Slug":  "$1"
                }
            }
        },
        "Блог":
        {
            "Match":"^/blog$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":{
                "Entity": "Blog",
                "Sort":
                {
                    "Created": false
                }
            }
        },
        "RSS блога":
        {
            "Match":"^/blog.rss$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Renderer":
                {
                    "Service": "View.RSS",
                    "Method": "Render"
                },
                "Entity": "Blog",
                "Link": "/blog",
                "Sort":
                {
                    "Created": false
                }
            }
        },
        "Тег блога":
        {
            "Match":"^/blogs/tag/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Custom Templates":
                {
                    "List": "List/Tag"
                },
                "Where":
                {
                    "Tags":  "$1"
                }
            }
        },
        "Тег  блога, страницы":
        {
            "Match":"^/blogs/tag/(.+)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Weight": 30,
            "Call":
            {
                "Entity": "Blog",
                "Page": "$2",
                "Custom Templates":
                {
                    "List": "List/Tag"
                },
                "Where":
                {
                    "Tags":  "$1"
                }
            }
        }
    }
}