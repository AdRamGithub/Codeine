{
    "Mixins": ["Mixins.UGC", "Mixins.Text", "Mixins.CRUD"],
    "Storage": "Primary",
    "EPP": 10,
    "Sort":
    {
        "Created": false
    },
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Sequence",
                    "Method": "Get",
                    "Call":
                    {
                        "Entity": "Blog"
                    }
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Weight": 200,
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Source":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Category":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Description":
        {
            "Type": "Literal.HTML",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.WYSIWYG"
                }
            }
        },
        "Slug":
        {
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "User Override": true,
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate"
                }
            }
        },
        "Published":
        {
            "Type": "Date.Short",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Datepicker",
                    "Value":
                    {
                        "Service": "System.Time",
                        "Method": "Get"
                    }
                }
            }
        },
        "Redirect":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    }
}