{
    "Mixins": ["Mixins.UGC", "Mixins.Text", "Mixins.CRUD", "Mixins.Age.Russia"],
    "Storage": "Primary",
    "EPP": 10,
    "Sort":
    {
        "Created": false
    },
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Count",
                    "Method": "Get",
                    "Call":
                    {
                        "Entity": "Blog"
                    }
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Source":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Category":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Description":
        {
            "Type": "Literal.HTML",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.WYSIWYG"
                }
            }
        },
        "Slug":
        {
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "User Override": true,
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate",
                    "Call":
                    {
                        "Key": "Title",
                        "Delimiter": "-",
                        "Transliteration":
                        {
                            "Service":"Text.Transform.Transliterate.Simple",
                            "Method": "Do",
                            "Call":
                            {
                                "From":"Russian",
                                "To": "English"
                            }
                        }
                    }
                }
            }
        },
        "Published":
        {
            "Type": "Date.Short",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Datepicker",
                    "Value":
                    {
                        "Service": "System.Time",
                        "Method": "Get"
                    }
                }
            }
        },
        "Redirect":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    }
}