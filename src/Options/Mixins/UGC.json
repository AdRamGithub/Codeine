{
    "Nodes":
    {
        "User":
        {
            "Type": "Numeral.Integer",
            "Default": 0,
            "User Override": true,
            "Scope": "Control",
            "Hooks":
            {
                "beforeEntityCreate": "$Session.User.ID"
            }
        },
        "Created":
        {
            "Type": "Numeral.Integer",
            "User Override": true,
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "System.Time",
                    "Method": "Get"
                }
            }
        },
        "Modified":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "System.Time",
                    "Method": "Get"
                }
            }
        },
        "Editor":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityUpdate": "$Session.User.ID"
            }
        }
    }
}