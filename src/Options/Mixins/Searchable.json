{
    "Nodes":
    {
        "Keywords":
        {
            "Type": "Auto",
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "Search.Indexer",
                    "Method": "Write"
                }
            }
        }
    },
    "Hooks":
    {
        "afterEntityWrite":
        {
            "Add to index":
            {
                "Service": "Entity.Search",
                "Method": "Add"
            }
        },
         "beforeEntityDelete":
         {
             "Remove from index":
             {
                 "Service": "Entity.Search",
                 "Method":  "Remove"
             }
         }
    }
}