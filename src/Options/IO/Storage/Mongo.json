{
    "Server": "/tmp/mongodb-27017.sock",
    "Mongo":
    {
         "Upsert Enabled": true,
         "Multiple Updates": true,
         "Just One": true,
         "Write Concerns": 0
    },
    "Hooks":
    {
        "IO":
        {
            "Storage":
            {
                "-Mongo":
                {
                    "Update":
                    {
                        "Failed":
                        {
                            "Error Page":
                            {
                                "Service": "Error.500",
                                "Method": "Die",
                                "Call":
                                {
                                    "Message": "Update Failed"
                                }
                            }
                        }
                    }
                }

            }
        }
    }
}