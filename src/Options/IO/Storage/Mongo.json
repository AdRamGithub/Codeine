{
    "Server": "/tmp/mongodb-27017.sock",
    "Mongo":
    {
         "Upsert Enabled": true,
         "Multiple Updates": true,
         "Just One": true,
         "Write Concerns": 0,
         "Connect":
         {
             "connectTimeoutMS": 1000
         },
         "Update":
         {
             "upsert": false,
             "multiple": false,
             "j": 0
         }
    },
    "Hooks":
    {
        "IO":
        {
            "Storage":
            {
                "-Mongo":
                {
                    "Update":
                    {
                        "Failed":
                        {
                            "Error Page":
                            {
                                "Service": "Error.500",
                                "Method": "Die",
                                "Call":
                                {
                                    "Message": "Update Failed"
                                }
                            }
                        }
                    }
                }

            }
        }
    }
}