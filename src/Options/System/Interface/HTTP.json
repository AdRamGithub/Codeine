{
    "View":
    {
        "Renderer":
        {
            "Service": "View.HTML",
            "Method": "Render"
        }
    },
    "HTTP":
    {
        "Redirect": "Permanent",
        "Methods":
        {
            "Allowed": ["GET", "POST"],
            "Default": "GET"
        },
        "Headers":
        {
            "HTTP/1.1": "200 OK",
            "Content-Language:": "ru",
            "X-Frame-Options:": "SAMEORIGIN",
            "X-Content-Type-Options:": "nosniff",
            "X-XSS-Protection:": " 1; mode=block"
        }
    },
    "Hooks":
    {
        "beforeInterfaceRun":
        {
            "Output Buffering":
            {
                "Service": "System.Interface.HTTP.OB",
                "Method": "Start"
            }
        },
        "beforeRequestRun":
        {
            "Project":
            {
                "Service": "Project.Preload",
                "Method": "Do",
                "Must be first": true
            },
            "Locale":
            {
                "Service": "System.Interface.HTTP.Locale",
                "Method": "Detect"
            },
            "-Journal":
            {
                "Service": "System.Interface.HTTP.Journal"
            },
            "Host":
            {
                "Service": "System.Interface.HTTP.Host",
                "Method": "Do"
            },
            "URL":
            {
                "Service": "System.Interface.HTTP.URL",
                "Method": "Do"
            },
            "Protocol":
            {
                "Service": "System.Interface.HTTP.Protocol",
                "Method": "Do"
            },
            "IP":
            {
                "Service": "System.Interface.HTTP.IP",
                "Method": "Do"
            },
            "Referrer":
            {
                "Service": "System.Interface.HTTP.Referrer",
                "Method": "Do"
            },
            "Agent":
            {
                "Service": "System.Interface.HTTP.Agent"
            },
            "Filter by User Agent":
            {
                "Service": "Security.User Agent",
                "Method": "Filter"
            },
            "Filter Request":
            {
                "Service": "Security.Request",
                "Method": "Filter"
            },
            "-IDS":
            {
                "Service": "Security.IDS",
                "Method": "Check"
            }
        },
        "afterInterfaceRun":
        {
            "FastCGI Finish Request":
            {
                "Service": "System.Interface.HTTP",
                "Method": "Finish"
            },
            "IO Shutdown":
            {
                "Service": "IO",
                "Method": "Shutdown"
            },
            "Performance":
            {
                "Service": "Performance",
                "Method": "Do"
            },
            "Spit log":
            {
                "Service": "IO.Log",
                "Method": "Spit"
            },
            "Output Buffering":
            {
                "Service": "System.Interface.HTTP.OB",
                "Method": "Finish"
            }
        }
    }
}