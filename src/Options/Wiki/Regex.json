{
    "Regex":
    {
        "Wiki TOC":
        {
            "Match": "^/wiki$",
            "Weight": 100,
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Wiki",
                "Template": "Tree",
                "Where":
                {
                    "Level": "0"
                },
                "Custom Templates":
                {
                    "List": "Tree"
                }
            }
        },
        "List Wiki":
        {
            "Match": "^/wiki/list",
            "Weight": 100,
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Wiki"
            }
        },
        "Create or update wiki":
        {
            "Match": "/wiki/edit/(.*)",
            "Weight": 100,
            "Service": "Entity.UpdateOrCreate",
            "Method": "Do",
            "Call":
            {
                "Entity": "Wiki",
                "Where":
                {
                    "SEO.Slug": "$1"
                },
                "Data":
                {
                    "SEO.Slug": "$1"
                }
            }
        },
        "Show Wiki":
        {
            "Match": "^/wiki/(.*)$",
            "Weight": 100,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Wiki",
                "Where":
                {
                    "SEO.Slug": "$1"
                }
            }
        }
    }
}