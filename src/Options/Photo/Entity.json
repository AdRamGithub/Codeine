{
    "Storage": "Primary",
    "Mixins": ["Mixins.UGC", "Mixins.CRUD"],
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID",
                    "Method": "Get"
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Description":
        {
            "Type": "Literal.Text",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Image":
        {
            "Type": "File.Upload",
            "Storage": "File",
            "Scope": "photo",
            "Naming":
            {
                "Service": "Data.Type.File.Upload.Naming.MIME",
                "Method": "Get"
            },
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.File"
                }
            }
        },
        "Tags":
        {
            "Type": "Literal.Tags",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "EXIF":
        {
            "Type": "Complex.Array",
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "Formats.EXIF",
                    "Do": "Decode"
                }
            }
        }
    }
}