{
    "Storage": "Primary",
    "EPP": 5,
    "ID":
    {
        "Service": "Security.UID.Integer",
        "Method": "Get"
    },
    "Nodes":
    {
        "Login":
        {
            "Type": "Literal.String",
            "Regex": "[A-Za-z]+",
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.TextfieldUnique",
                    "Placeholder": "Латинские буквы"
                }
            }
        },
        "Password":
        {
            "Type": "Literal.Password",
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Password",
                    "Placeholder": "Длиннее 4-х символов"
                }
            }
        },
        "Fullname":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "EMail":
        {
            "Type": "Literal.EMail",
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Textfield",
                    "Subtype": "email"
                }
            }
        }
    },
    "Hooks":
    {
        "afterCreate":
        {
            "Activation":
            {
                "Service": "User.Activation",
                "Method": "Send"
            }
        }
    }
}