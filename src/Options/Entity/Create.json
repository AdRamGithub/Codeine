{
    "Contract":
    {
        "Entity.Create":
        {
            "Do":
            {
                "Memo": ["Entity", "Data", "Template", "Time", "Scope"]
            }
        }
    },
    "Purpose": "Create",
    "FormLayout": "Full",
    "OnlyRequired": false,
    "Hooks":
    {
        "beforeCreateDo":
        {
            "Load model (essential)":
            {
                "Service":"Entity",
                "Method":"Load"
            }
        },
        "beforeCreateGet":
        {
            "Load model (essential)":
            {
                "Service": "Entity",
                "Method": "Load"
            },
            "Add form widget":
            {
                "Output":
                {
                    "Content":
                    {
                        "Form Widget":
                        {
                            "Type": "Form",
                            "Submit": "Create"
                        }
                    }
                }
            }
        },
        "afterCreatePost":
        {
            "Make variables alive":
            {
                "Service":"Entity.Hooks.Live",
                "Method":"Process"
            },
            "HTTP 201":
            {
                "Headers":
                {
                    "HTTP/1.1": "201 Created"
                }
            },
            "Add success layout":
            {
                "Output":
                {
                    "Content":
                    {
                        "Success layout":
                        {
                            "Type": "Template",
                            "ID": "Created"
                        }
                    }
                }
            }
        }
    }
}