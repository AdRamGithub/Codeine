{
    "Purpose": "Create",
    "FormLayout": "Full",
    "OnlyRequired": false,
    "Hooks":
    {
        "beforeCreateDo":
        {
            "Load model (essential)":
            {
                "Service":"Entity",
                "Method":"Load"
            }
        },
        "beforeCreatePost":
        {
            "Make variables alive":
            {
                "Service":"Entity.Nodes.Hook",
                "Method":"Process"
            }
        },
        "beforeCreateGet":
        {
            "Add form widget":
            {
                "Output":
                {
                    "Content":
                    {
                        "Form Widget":
                        {
                            "Type": "Form",
                            "Submit": "Create"
                        }
                    }
                }

            }
        },
        "afterCreatePost":
        {
            "Add success layout":
            {
                "Output":
                {
                    "Content":
                    {
                        "Success layout":
                        {
                            "Type": "Template",
                            "ID": "Created"
                        }
                    }
                }

            }
        }
    }
}