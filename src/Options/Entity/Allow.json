{
    "Allow":
    {
        "Mode": "Direct"
    },
    "Hooks":
    {
        "beforeAllowDo":
        {
            "Load model (essential)":
            {
                "Service":"Entity",
                "Method":"Load"
            }
        },
        "beforeAllowGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterAllowPost":
        {
            "Restore URL":
            {
                "Service": "System.Interface.Web",
                "Method": "RestoreURL"
            }
        }
    }
}