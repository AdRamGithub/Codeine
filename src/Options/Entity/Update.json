{
    "Purpose": "Update",
    "FormLayout": "Full",
    "Hooks":
    {
        "beforeUpdateDo":
        {
            "Load model (essential)":
            {
                "Service":"Entity",
                "Method":"Load"
            }
        },
        "beforeUpdatePost":
        {
            "Make variables alive":
            {
                "Service":"Entity.Nodes.Hook",
                "Method":"Process",
                "Call":
                {
                    "Purpose": "Update"
                }
            }
        },
        "afterUpdatePost":
        {
            "HTTP 202":
            {
                "Headers":
                {
                    "HTTP/1.0": "202 Accepted"
                }
            },
            "Add success layout":
            {
                "Output":
                {
                    "Content":
                    {
                        "Success layout":
                        {
                            "Type": "Template",
                            "ID": "Created"
                        }
                    }
                }

            }
        }
    },
    "Output":
    {
        "Content":
        {
            "Form Widget":
            {
                "Type": "Form",
                "Submit": "Update"
            }
        }
    }
}