{
    "Purpose": "Update",
    "FormLayout": "Full",
    "Hooks":
    {
        "beforeUpdateDo":
        {
            "Load model (essential)":
            {
                "Service":"Entity",
                "Method":"Load"
            }
        },
        "beforeUpdatePost":
        {
            "Make variables alive":
            {
                "Service":"Entity.Nodes.Hook",
                "Method":"Process",
                "Call":
                {
                    "Purpose": "Update"
                }
            }
        }
    },
    "Output":
    {
        "Content":
        {
            "Form Widget":
            {
                "Type": "Form",
                "Submit": "Update"
            }
        }
    }
}