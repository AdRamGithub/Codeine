{
    "Hooks":{
        "beforeRun":
        {
            "Audit":
            {
                "Service": "Security.Auth",
                "Method": "Audit"
            }
        },
        "afterRun":{
            "Rendering":
            {
                "Service":"View",
                "Method":"RenderSlice"
            }
        },
        "on404":{
            "ErrorPage":{
                "Service":"Error.404",
                "Method":"Block"
            }
        }
    }
}