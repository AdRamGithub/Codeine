{
    "Context": "app",
    "Hooks":
    {
        "beforeApplicationRun":
        {
            "Layouts":
            {
                "Service": "Code.Flow.Application.Layouts",
                "Method": "Do"
            },
            "Access":
            {
                "Service": "Code.Flow.Front.Access",
                "Method": "Check"
            }
        },
        "afterApplicationRun":
        {
            "Rendering":
            {
                "Service":"View",
                "Method":"Render"
            }
        },
        "NotFound":
        {
            "Error":
            {
                "Service":"Error.404",
                "Method":"Block"
            }
        },
        "Access":
        {
            "Denied":
            {
                "ErrorBlock":
                {
                    "Service": "Error.403",
                    "Method": "Block"
                }
            }
        }
    }
}