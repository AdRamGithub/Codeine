{
    "Mixins": ["Control.Regex"],
    "Regex":
    {
        "Auto API":
        {
            "Match": "@^/api/(.*)@",
            "Service":"$1",
            "Method":"Do"
        },
        "Error":
        {
            "Match": "@/error/(.*)@",
            "Service": "Error.Page",
            "Method": "Do",
            "Call":
            {
                "Code": "$1"
            }
        },
        "Auto Doc":
        {
            "Match": "@^/docs/(.*)/(.*)@",
            "Service":"Code.Documentation.ByContract",
            "Method":"Do",
            "Call":
            {
                "Doc":
                {
                    "Service": "$1",
                    "Method": "$2"
                }
            }
        },
        "Experiment":
        {
            "Match": "@^/experiment/(.*)@",
            "Service":"Experiment",
            "Method":"Set",
            "Call":
            {
                "Experiment": "$1"
            }
        },
        "Monitor":
        {
            "Match": "@/monitor/(.*).json@",
            "Service": "Monitor",
            "Method": "Do",
            "Renderer": "View.JSON",
            "Call":
            {
                "Bundle": "$1"
            }
        },
        "Page":
        {
            "Match": "@/(.*)@",
            "Weight": -5,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Zone": ["Project"],
            "Call":
            {
                "Entity": "Page",
                "Where":
                {
                    "Slug": "$1"
                }
            }
        }
    }
}
