{
    "Mixins": ["Control.Regex", "User.Regex"],
    "Regex Pattern":
    {
        "Prefix": "@",
        "Postfix": "@su"
    },
    "Regex":
    {
        "Search":
        {
            "Match": "^/search/(.*)$",
            "Weight": 20,
            "Service": "Entity.Search",
            "Method": "Do",
            "Call":
            {
                "Entity": "$1"
            }
        },
        "Error":
        {
            "Match": "/error/(.*)",
            "Service": "Error.Page",
            "Method": "Do",
            "Call":
            {
                "Code": "$1"
            }
        },
        "Experiment":
        {
            "Match": "^/experiment/(.*)",
            "Service":"Experiment",
            "Method":"Set",
            "Call":
            {
                "Experiment": "$1"
            }
        },
        "Dict":
        {
            "Match": "^/dict/(.*)/(.*).json",
            "Service":"Entity.Dict",
            "Method":"Do",
            "Renderer":
            {
                "Service": "View.JSON",
                "Method": "Render"
            },
            "Call":
            {
                "Entity": "$1",
                "Key": "$2"
            }
        },
        "Dict Plaintext":
        {
            "Match": "^/dict/(.*)/(.*).txt",
            "Service":"Entity.Dict",
            "Method":"Do",
            "Renderer":
            {
                "Service": "View.Plaintext",
                "Method": "Render"
            },
            "Call":
            {
                "Entity": "$1",
                "Key": "$2"
            }
        },
        "Page":
        {
            "Match": "/(.*)",
            "Weight": -5,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Page",
                "Where":
                {
                    "Slug": "$1"
                }
            }
        },
        "Test":
        {
            "Match": "/test/(.+)",
            "Weight": 5,
            "Service": "Test",
            "Method": "Do",
            "Call":
            {
                "Test": "$1"
            }
        },
        "All Tests":
        {
            "Match": "/test",
            "Weight": 5,
            "Service": "Test",
            "Method": "All"
        },
        "One Sitemap":
        {
            "Match": "/sitemap/(.+).xml",
            "Service": "SEO.Sitemap",
            "Method": "Entity",
            "Renderer":
            {
                "Service": "View.XML",
                "Method": "Render"
            },
            "Call":
            {
                "Entity": "$1"
            }
        },
        "To":
        {
            "Match": "/to/(.+)",
            "Service": "System.Interface.Web",
            "Method": "Redirect",
            "Call":
            {
                "Location": "$1"
            }
        },
        "Go":
        {
            "Match": "/go/(.+)",
            "Service": "System.Interface.Web",
            "Method": "Remote Redirect",
            "Call":
            {
                "Location": "$1"
            }
        }
    }
}
