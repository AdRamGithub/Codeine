{
    "Mixins": [
        "Control.Regex",
        "User.Regex",
        "Search.Regex",
        "Test.Regex",
        "SEO.Sitemap.Regex"
    ],
    "Regex Pattern":
    {
        "Prefix": "@",
        "Postfix": "@su"
    },
    "Regex":
    {
        "Pagination":
        {
            "Match": "/page(\\d+)",
            "Mixin": true,
            "Call":
            {
                "Page": "$1"
            }
        },
        "Error":
        {
            "Match": "/error/(.*)",
            "Service": "Error.Page",
            "Method": "Do",
            "Call":
            {
                "Code": "$1"
            }
        },
        "IP Flag":
        {
           "Match": "/utils/ip-flag/(.+)",
           "Service": "Country.FlagByIP",
           "Method": "Get",
           "View":
           {
               "Renderer":
               {
                   "Service": "View.File",
                   "Method": "Render"
               }
           },
           "Call":
           {
               "IP": "$1"
           }
        },
        "Uploads":
        {
            "Match": "/uploads/(.*)",
            "Service": "IO.Uploader",
            "Method": "Read",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.RAW",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Where":
                {
                    "ID": "$1"
                }
            }
        },
        "To":
        {
            "Match": "/to/(.+)",
            "Service": "System.Interface.HTTP",
            "Method": "Redirect",
            "Call":
            {
                "Redirect": "$1"
            }
        },
        "Go":
        {
            "Match": "/go/(.+)",
            "Service": "System.Interface.HTTP",
            "Method": "Remote Redirect",
            "Call":
            {
                "Redirect": "$1"
            }
        },
        "WOT":
        {
            "Match": "/mywot(.+).html",
            "Service": "Providers.Webmaster.WOT",
            "Method": "Auth",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.Plaintext",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "ID": "$1"
            }
        },
        "GWM":
        {
            "Match": "/google(.+).html",
            "Service": "Providers.Webmaster.Google",
            "Method": "Auth",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.Plaintext",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "ID": "$1"
            }
        },
        "Fonts":
        {
            "Match": "/fonts/(.+)/(.+).(woff|woff2|ttf|otf)$",
            "Service": "View.Asset",
            "Method": "Get",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.File",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Scope": "fonts",
                "Asset": "$1",
                "ID": "$2",
                "Extension": "$3"
            }
        },
        "Audio":
        {
            "Match": "/audio/(.+)/(.+).(mp3|ogg)$",
            "Service": "View.Asset",
            "Method": "Get",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.File",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Scope": "$3",
                "Asset": "$1",
                "ID": "$2",
                "Extension": "$3"
            }
        },
        "Image":
        {
            "Match": "/img/(.+)/(.+).(png|jpg|jpeg|gif|webp)$",
            "Service": "View.Asset",
            "Method": "Get",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.File",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Scope": "img",
                "Asset": "$1",
                "ID": "$2",
                "Extension": "$3"
            }
        },
        "Page":
        {
            "Match": "/(.*)",
            "Weight": -100,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Page",
                "Where":
                {
                    "Slug": "$1"
                }
            }
        }
    }
}
