{
    "Regex":
    {
        "Subcontrol with ID":
        {
            "Match":"@^/control/(.*)/(.*)/(.*)$@",
            "Weight": 10,
            "Service":"Control.Panel",
            "Method":"Do",
            "Zone": "Control",
            "Call":
            {
                "Bundle": "$1",
                "Option": "$2",
                "ID": "$3"
            }
        },
        "Subcontrol":
        {
            "Match":"@^/control/(.*)/(.*)$@",
            "Weight": 5,
            "Service":"Control.Panel",
            "Method":"Do",
            "Zone": "Control",
            "Call":
            {
                "Bundle": "$1",
                "Option": "$2"
            }
        },
        "Control":
        {
            "Match":"@^/control/(.*)@",
            "Service":"Control.Panel",
            "Method":"Do",
            "Zone": "Control",
            "Call":
            {
                "Bundle": "$1"
            }
        },
        "Activate.User":
        {
            "Match":"@^/activate/user/(.*)@",
            "Service":"User.Activation",
            "Method":"Check",
            "Call":{
                "Code": "$1"
            }
        },
        "SendMail.User":
        {
            "Match": "@^/mail/user/(.*)@",
            "Service":"User.Activation",
            "Method":"Send",
            "Call":{
                "Element": "$1"
            }
        }
    }
}
