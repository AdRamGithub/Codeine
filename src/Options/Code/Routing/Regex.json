{
    "Mixins": ["Control.Regex"],
    "Pattern": {
        "Prefix": "@",
        "Postfix": "@su"
    },
    "Regex":
    {
        "Error":
        {
            "Match": "/error/(.*)",
            "Service": "Error.Page",
            "Method": "Do",
            "Call":
            {
                "Code": "$1"
            }
        },
        "Experiment":
        {
            "Match": "^/experiment/(.*)",
            "Service":"Experiment",
            "Method":"Set",
            "Call":
            {
                "Experiment": "$1"
            }
        },
        "Page":
        {
            "Match": "/(.*)",
            "Weight": -5,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Zone": ["Project"],
            "Call":
            {
                "Entity": "Page",
                "Where":
                {
                    "Slug": "$1"
                }
            }
        }
    }
}
