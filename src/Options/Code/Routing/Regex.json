{
    "Mixins": ["Control.Regex", "User.Regex"],
    "Regex Pattern":
    {
        "Prefix": "@",
        "Postfix": "@su"
    },
    "Regex":
    {
        "Search":
        {
            "Match": "^/search/(.*)/(.*)$",
            "Weight": 20,
            "Service": "Search",
            "Method": "Query",
            "Call":
            {
                "Provider": "$1",
                "Query": "$2"
            }
        },
        "Vertical Search":
        {
            "Match": "^/search/(.*)$",
            "Weight": 20,
            "Service": "Search",
            "Method": "Query",
            "Call":
            {
                "Query": "$1"
            }
        },
        "Error":
        {
            "Match": "/error/(.*)",
            "Service": "Error.Page",
            "Method": "Do",
            "Call":
            {
                "Code": "$1"
            }
        },
        "IP Flag":
        {
           "Match": "/utils/ip-flag/(.+)",
           "Service": "Country.FlagByIP",
           "Method": "Get",
           "View":
           {
               "Renderer":
               {
                   "Service": "View.File",
                   "Method": "Render"
               }
           },
           "Call":
           {
               "IP": "$1"
           }
        },
        "Dict":
        {
            "Match": "^/dict/(.*)/(.*).json",
            "Service":"Entity.Dict",
            "Method":"Do",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.JSON",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "$1",
                "Key": "$2"
            }
        },
        "Dict Plaintext":
        {
            "Match": "^/dict/(.*)/(.*).txt",
            "Service":"Entity.Dict",
            "Method":"Do",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.Plaintext",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "$1",
                "Key": "$2"
            }
        },
        "Uploads":
        {
            "Match": "/uploads/(.*)",
            "Service": "IO.Uploader",
            "Method": "Read",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.RAW",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Where":
                {
                    "ID": "$1"
                }
            }
        },
        "Page":
        {
            "Match": "/(.*)",
            "Weight": -5,
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Page",
                "Where":
                {
                    "Slug": "$1"
                }
            }
        },
        "Test":
        {
            "Match": "^/test/(.+)$",
            "Weight": 5,
            "Service": "Test",
            "Method": "Do",
            "Call":
            {
                "Test": "$1"
            }
        },
        "All Tests":
        {
            "Match": "^/test$",
            "Weight": 5,
            "Service": "Test",
            "Method": "Do"
        },
        "One Sitemap w/pages":
        {
            "Match": "/sitemap/(.+)/(\\d+).xml",
            "Service": "SEO.Sitemap",
            "Method": "One",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.XML",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "$1",
                "Page": "$2"
            }
        },
        "One Sitemap":
        {
            "Match": "/sitemap/(.+).xml",
            "Service": "SEO.Sitemap",
            "Method": "One",
            "View":
            {
                "Renderer":
                {
                    "Service": "View.XML",
                    "Method": "Render"
                }
            },
            "Call":
            {
                "Entity": "$1"
            }
        },
        "To":
        {
            "Match": "/to/(.+)",
            "Service": "System.Interface.Web",
            "Method": "Redirect",
            "Call":
            {
                "Location": "$1"
            }
        },
        "Go":
        {
            "Match": "/go/(.+)",
            "Service": "System.Interface.Web",
            "Method": "Remote Redirect",
            "Call":
            {
                "Location": "$1"
            }
        },
        "Deposit":
        {
            "Match": "/deposit/(.*)/(.+)",
            "Service": "Entity.Balance.Deposit",
            "Method": "Do",
            "Call":
            {
                "Entity": "$1",
                "Where": "$2"
            }
        }
    }
}
