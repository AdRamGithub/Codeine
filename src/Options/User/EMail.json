{
    "EMail Activation":
    {
        "Subject": "Активация аккаунта",
        "Auto Login": true
    },
    "Hooks":
    {
        "Activation":
        {
            "Success":
            {
                "Redirect":
                {
                    "Service": "System.Interface.Web",
                    "Method": "Redirect",
                    "Call":
                    {
                        "Location": "$ActivationData.BackURL"
                    }
                }
            },
            "Failed":
            {
                "Show page":
                {
                    "Service": "View",
                    "Method": "Add",
                    "Call":
                    {
                        "Place": "Content",
                        "Element":
                        {
                            "Type": "Template",
                            "Scope": "User",
                            "ID": "Activation/Failed"
                        }
                    }
                }
            }
        }
    }
}