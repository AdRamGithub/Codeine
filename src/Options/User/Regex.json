{
    "Regex":
    {
        "Show user":
        {
            "Match":"^/user/(\\d+)",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Zone": ["Project"],
            "Call":
            {
                "Entity": "User",
                "Where": "$1"
            }
        },
        "Activate.User":
        {
            "Match":"^/activate/user/(.*)",
            "Service":"User.Activation",
            "Method":"Check",
            "Call":{
                "Code": "$1"
            }
        },
        "SendMail.User":
        {
            "Match": "^/mail/user/(.*)",
            "Service":"User.Activation",
            "Method":"Send",
            "Call":{
                "Second": true,
                "Data":
                {
                    "ID": "$1"
                }
            }
        }
    }
}