{
    "Mixins":
    [
        "Mixins.ID.Sequence",
        "Mixins.UGC",
        "Mixins.Filled",
        "Mixins.Verifiable",
        "Mixins.Balance",
        "Mixins.Channel"
    ],
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "Gender":
        {
            "Type": "List.Enum",
            "Default": 0,
            "Verifiable": true,
            "Options": ["U", "M", "F"],
            "Localized": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Select"
                }
            }
        },
        "EMail":
        {
            "Type": "Literal.EMail",
            "Required": true,
            "Verifiable": true,
            "Unique": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield",
                    "Subtype": "email"
                },
                "Update":
                {
                    "Type": "Form.Static"
                }
            },
            "Hooks":
            {
                "afterEntityCreate":
                {
                    "Service": "User.EMail",
                    "Method": "Verify"
                }
            }
        },
        "External":
        {
            "Type": "Literal.String"
        },
        "Status":
        {
            "Type": "Ternary",
            "Default": 0
        },
        "Fullname": {},
        "Title":
        {
            "Type": "Literal.String",
            "Verifiable": true,
            "Hooks":
            {
                "beforeEntityUpdate":
                {
                    "Service": "User.Entity",
                    "Method": "Fullname"
                }
            },
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Password":
        {
            "Type": "Literal.Password",
            "Scope": "Password",
            "User Override": true,
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.Password.Generator",
                    "Method": "Get",
                    "Call":
                    {
                        "Length": 8
                    }
                }
            },
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Password",
                    "Required": true
                }
            }
        },
        "DOB":
        {
            "Default": null,
            "Nullable": true,
            "Type": "Date.Short",
            "Verifiable": true,
            "Widgets":
            {
                "Update":
                {
                    "Type": "Form.Datepicker"
                }
            }
        },
        "Age":
        {
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Entity",
                    "Method": "Age"
                }
            }
        },
        "Photo":
        {
            "Type": "File.Upload",
            "Storage": "Upload",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.File"
                }
            }
        },
        "APIKey":
        {
            "Type": "Literal.String",
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "Security.UID",
                    "Method": "Get",
                    "Call":
                    {
                        "Mode": "Secure+"
                    }
                }
            }
        },
        "Avatar":
        {
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Entity",
                    "Method": "Photo"
                }
            }
        }
    },
    "Hooks":
    {
        "afterLogin":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        },
        "afterUpdatePost!":
        {
            "Show message":
            {
                "Output":
                {
                    "Message":
                    {
                        "Success":
                        {
                            "Type": "Block",
                            "Class": "alert alert-success",
                            "Value": "Профиль обновлён"
                        }
                    }

                }
            }
        },
        "afterLogout!":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        }
    }
}