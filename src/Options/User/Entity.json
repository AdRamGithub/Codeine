{
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Count",
                    "Method": "Get",
                    "Call":
                    {
                        "Entity": "User"
                    }
                }
            }
        },
        "EMail":
        {
            "Type": "Literal.String",
            "Required": true,
            "Unique": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield",
                    "Subtype": "email"
                }
            }
        },
        "Status":
        {
            "Default": 1
        },
        "Fullname":
        {
            "Type": "Literal.String",
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Password":
        {
            "Type": "Literal.Password",
            "WriteOnce": true,
            "Required": true,
            "NoLive": true,
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Password",
                    "Required": true
                }
            }
        },
        "Created":
        {
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service":"System.Time",
                    "Method":"Get"
                }
            }
        }
    },
    "Hooks":
    {
        "afterCreatePost":
        {
            "Activation":
            {
                "Service": "User.Activation",
                "Method": "Send"
            }
        },
        "afterDeletePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/User"
                }
            }
        },
        "-afterLogin":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        },
        "afterLogout":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        }
    }
}