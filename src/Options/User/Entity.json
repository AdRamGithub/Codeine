{
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Count",
                    "Method": "Get",
                    "Call":
                    {
                        "Entity": "User"
                    }
                }
            }
        },
        "EMail":
        {
            "Type": "Literal.String",
            "Weight": 60,
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield",
                    "Subtype": "email"
                }
            }
        },
        "External":
        {
            "Type": "Literal.String"
        },
        "Status":
        {
            "Default": 1
        },
        "Fullname":
        {
            "Type": "Literal.String",
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Password":
        {
            "Type": "Literal.Password",
            "WriteOnce": true,
            "NoLive": true,
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Password",
                    "Required": true
                }
            }
        },
        "Phone":
        {
            "Widgets":
            {
                "Update":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "DOB":
        {
            "Default": 0,
            "Type": "Date.Short",
            "Widgets":
            {
                "Update":
                {
                    "Type": "Form.Datepicker"
                }
            }
        },
        "Age":
        {
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Entity",
                    "Method": "Age"
                }
            }
        },
        "Photo":
        {
            "Type": "File.Upload",
            "Storage": "File",
            "Scope": "user",
            "Naming":
            {
                "Service": "Data.Type.File.Upload.Naming.MIME",
                "Method": "Get"
            },
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.File"
                }
            }
        },
        "Created":
        {
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service":"System.Time",
                    "Method":"Get"
                }
            }
        }
    },
    "Hooks":
    {
        "afterCreatePost":
        {
            "Activation":
            {
                "Service": "User.Activation",
                "Method": "Send"
            }
        },
        "afterDeletePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/User"
                }
            }
        },
        "-afterLogin":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        },
        "beforeUpdateGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterUpdatePost":
        {
            "Restore URL":
            {
                "Service": "System.Interface.Web",
                "Method": "RestoreURL"
            }
        },
        "afterLogout":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        }
    }
}