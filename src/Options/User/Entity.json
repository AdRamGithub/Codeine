{
    "Mixins": ["Mixins.UGC", "Mixins.CRUD", "Mixins.Filled"],
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "ID":
        {
            "Type": "Numeral.Integer",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID.Count",
                    "Method": "Get",
                    "Call":
                    {
                        "Entity": "User"
                    }
                }
            }
        },
        "EMail":
        {
            "Type": "Literal.EMail",
            "Weight": 60,
            "Required": true,
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Textfield",
                    "Subtype": "email"
                },
                "Update":
                {
                    "Type": "Form.Static"
                }
            }
        },
        "Gender":
        {
            "Type": "List.Enum",
            "Default": 0,
            "Options": ["M", "F"],
            "Localized": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Radiogroup"
                }
            }
        },
        "External":
        {
            "Type": "Literal.String"
        },
        "Status":
        {
            "Default": 0
        },
        "Fullname":
        {
            "Type": "Literal.String",
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Password":
        {
            "Type": "Literal.Password",
            "WriteOnce": true,
            "NoLive": true,
            "Widgets":
            {
                "Create":
                {
                    "Type": "Form.Password",
                    "Required": true
                }
            }
        },
        "Phone":
        {
            "Widgets":
            {
                "Update":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "DOB":
        {
            "Default": null,
            "Nullable": true,
            "Type": "Date.Short",
            "Widgets":
            {
                "Update":
                {
                    "Type": "Form.Datepicker"
                }
            }
        },
        "Age":
        {
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Entity",
                    "Method": "Age"
                }
            }
        },
        "Photo":
        {
            "Type": "File.Upload",
            "Storage": "Upload",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.File"
                }
            }
        },
        "Avatar":
        {
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Entity",
                    "Method": "Photo"
                }
            }
        }
    },
    "Hooks":
    {
        "afterCreatePost!":
        {
            "Activation":
            {
                "Service": "User.Activation",
                "Method": "Send"
            }
        },
        "afterLogin!":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        },
        "afterLogout!":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/"
                }
            }
        }
    }
}