{
    "Storage": "Primary",
    "Nodes":
    {
        "ID":
        {
            "Type": "Literal.String",
            "Create":
            {
                "Service": "Security.UID",
                "Method": "Get"
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Keywords":
        {
            "Type": "Literal.Tags",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Description":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Body":
        {
            "Type": "Literal.HTML",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.WYSIWYG"
                }
            }
        },
        "Slug":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    },
    "Hooks":
    {
        "afterCreatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/Page"
                }
            }
        },
        "afterUpdatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/Page"
                }
            }
        }
    }
}