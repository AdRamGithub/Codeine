{
    "Mixins": ["Mixins.SEO", "Mixins.Text", "Mixins.CRUD", "Mixins.Priority"],
    "Storage": "Primary",
    "EPP": 20,
    "Sort":
    {
        "Priority": false
    },
    "Nodes":
    {
        "ID":
        {
            "Type": "Literal.String",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID",
                    "Method": "Get"
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Weight": 100,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Body":
        {
            "Type": "Literal.HTML",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.WYSIWYG"
                }
            }
        },
        "Menu":
        {
            "Type": "Boolean",
            "Default": false,
            "Nullable": true,
            "Weight": 10,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Checkbox",
                    "TrueValue": true
                }
            }
        },
        "Slug":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate"
                }
            }
        },
        "Redirect":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    }
}