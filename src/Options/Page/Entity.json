{
    "Mixins": ["Mixins.SEO", "Mixins.Text"],
    "Storage": "Primary",
    "EPP": 20,
    "Sort":
    {
        "Priority": false
    },
    "Nodes":
    {
        "ID":
        {
            "Type": "Literal.String",
            "Hooks":
            {
                "beforeEntityCreate":
                {
                    "Service": "Security.UID",
                    "Method": "Get"
                }
            }
        },
        "Title":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Body":
        {
            "Type": "Literal.HTML",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.WYSIWYG"
                }
            }
        },
        "Menu":
        {
            "Type": "Boolean",
            "Default": false,
            "Nullable": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Checkbox",
                    "TrueValue": true
                }
            }
        },
        "Priority":
        {
            "Type": "Numeral.Integer",
            "Default": 0,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        },
        "Slug":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate",
                    "Call":
                    {
                        "Key": "Title",
                        "Delimiter": "-",
                        "Transliteration":
                        {
                            "Service":"Text.Transform.Transliterate.Passport",
                            "Method": "2English"
                        }
                    }
                }
            }
        },
        "Redirect":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    },
    "Hooks":
    {
        "beforeList":
        {
            "Sort":
            {
                "Service": "Entity.List.Sort",
                "Method": "Sort"
            }
        },
        "afterCreatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/Page"
                }
            }
        },
        "afterUpdatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/Page"
                }
            }
        },
        "afterDeletePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/control/Page"
                }
            }
        }
    }
}