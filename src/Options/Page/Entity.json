{
    "Mixins": [
        "Mixins.SEO",
        "Mixins.Titled",
        "Mixins.Text",
        "Mixins.Priority",
        "Mixins.ID.Sequence"
    ],
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "Menu":
        {
            "Type": "Boolean",
            "Default": false,
            "Nullable": true,
            "Weight": 10,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Checkbox"
                }
            }
        },
        "Slug":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            },
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "SEO.Slug",
                    "Method": "Generate"
                }
            }
        },
        "Redirect":
        {
            "Type": "Literal.String",
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Textfield"
                }
            }
        }
    },
    "Hooks":
    {
        "beforeCreateGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterCreatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/$Data.0.Slug"
                }
            }
        },
        "beforeUpdateGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterUpdatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.Web",
                "Method": "Redirect",
                "Call":
                {
                    "Location": "/$Data.0.Slug"
                }
            }
        },
        "beforeDeleteGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterDeletePost":
        {
            "Restore URL":
            {
                "Service": "System.Interface.Web",
                "Method": "RestoreURL"
            }
        },
        "beforeTouch":
        {
            "Store URL":
            {
                "Service": "System.Interface.Web",
                "Method": "StoreURL"
            }
        },
        "afterTouch":
        {
            "Restore URL":
            {
                "Service": "System.Interface.Web",
                "Method": "RestoreURL"
            }
        }
    }
}