{
    "Regex":
    {
        "Comments by user, pages":
        {
            "Match": "/comments/author/(\\d+)/page(\\d+)",
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Comment",
                "Where":
                {
                    "User": "$1"
                },
                "Page": "$2"
            }
        },
        "Список комментариев к одной сущности":
        {
            "Match":"^/comments/(.*)/(.*)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Custom Templates":
                {
                    "List": "Object"
                },
                "Where":
                {
                    "Entity": "$1",
                    "Object": "$2"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Страница списка комментариев":
        {
            "Match":"^/comments/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Page":  "$1",
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        },
        "Создать комментарий":
        {
            "Match":"^/comment/(.*)/(.*)$",
            "Service":"Entity.Create",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Data":
                [
                    {
                        "Entity": "$1",
                        "Object": "$2"
                    }
                ]
            }
        },
        "Редактировать комментарий":
        {
            "Match":"^/update/comment/(.*)$",
            "Service":"Entity.Update",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Where": "$1"
            }
        },
        "Комментарий":
        {
            "Match":"^/comment/(.*)$",
            "Service":"Entity.Show.Static",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Where": "$1"
            }
        },
        "Страница списка комментариев к одной сущности":
        {
            "Match":"^/comments/(.*)/(.*)/page(\\d+)$",
            "Service":"Entity.List",
            "Method":"Do",
            "Call":
            {
                "Entity": "Comment",
                "Page":  "$3",
                "Where":
                {
                    "Entity": "$1",
                    "Object": "$2"
                },
                "Sort":
                {
                    "Created": "DESC"
                }
            }
        }
    }
}