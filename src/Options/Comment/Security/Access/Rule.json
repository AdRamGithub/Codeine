        {
            "Decision": true,
            "Weight": 50,
            "Run":
            {
                "Service": "Entity.Show.Static",
                "Method": "Do",
                "Call":
                {
                    "Entity": "Comment"
                }
            }
        },
        "Комментарий можно отредактировать":
        {
            "Decision": true,
            "Weight": 50,
            "Run":
            {
                "Service": "Entity.Update",
                "Call":
                {
                    "Entity": "Comment"
                }
