        "Комментировать могут зарегистрированные":
        {
            "Decision": true,
            "Weight": 50,
            "Run":
            {
                "Service": "Entity.Create",
                "Session":
                {
                    "User":
                    {
                        "ID": "*"
                    }
                },
                "Call":
                {
                    "Entity": "Comment"
                }
            }
        }
    }
