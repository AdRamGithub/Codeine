{
    "Package":
    {
        "Name": "Engine.Data",
        "Version": "6.1",
        "Developer": "Dmitry Bergstein",
        "Description": "Storage Abstraction Layer",
        "Status": "Unstable",
        "Origin": "https://raw.github.com/Breathless/Codeine/master/src/"
    },
    "Hooks":
    {
        "beforeLoad":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeCreate":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeUpdate":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeDelete":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeFind":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "Storage.Essential.Connect.Failed":
        {
            "Die":
            {
                "_N": "Hooks.Error.404",
                "_F": "Show"
            }
        }
    },
    "Storages":
    {
        "HTTP":
        {
            "Method": "Data.Store.Net.HTTP"
        },
        "MySQL":
        {
            "Method": "Data.Store.SQL.MySQLi",
            "URL": "localhost",
            "Database": "OX",
            "User": "root",
            "Password": "phoenix",
            "Essential": true
        },
        "Session":
        {
            "Method": "Data.Store.KeyValue.Redis.CRedis",
            "URL": "localhost",
            "Port": 6379
        },
        "Deferred":
        {
            "Method": "Data.Store.KeyValue.Redis.CRedis",
            "URL": "localhost",
            "Port": 6379
        },
        "Layout":
        {
            "Method": "Data.Store.FS.File",
            "URL": "Data/Layout"
        }
    }
}
