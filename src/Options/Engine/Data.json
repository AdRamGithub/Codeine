{
    "Package":
    {
        "Name": "Engine.Data",
        "Version": "6.1",
        "Developer": "Dmitry Bergstein",
        "Description": "Storage Abstraction Layer",
        "Status": "Unstable",
        "Origin": "https://raw.github.com/Breathless/Codeine/master/src/"
    },
    "Hooks":
    {
        "beforeLoad":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeCreate":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeUpdate":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeDelete":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "beforeFind":
        [{
            "_N": "Engine.Data",
            "_F": "AutoOpen"
        }],
        "Storage.Essential.Connect.Failed":
        {
            "Die":
            {
                "_N": "Hooks.Error.404",
                "_F": "Show"
            }
        }
    },
    "Storages":
    {
        "HTTP":
        {
            "Method": "Data.Store.Net.HTTP"
        },
        "Primary":
        {
            "Method": "Data.Store.Document.MongoDB",
            "URL": "localhost",
            "Database": "OX",
            "Essential": true
        },
        "Session":
        {
            "Method": "Data.Store.KeyValue.Redis.CRedis",
            "URL": "localhost",
            "Port": 6379
        },
        "Deferred":
        {
            "Method": "Data.Store.KeyValue.Redis.CRedis",
            "URL": "localhost",
            "Port": 6379
        },
        "Layout":
        {
            "Method": "Data.Store.FS.File",
            "URL": "Data/Layout"
        }
    },
    "Function":
    {
        "Open":
        {
            "Input":
            {
                "ID":
                {
                    "Type":"String",
                    "Required": true
                },
                "Server":
                {
                    "Type":"String",
                    "Required":true,
                    "AutoCorrect":
                    {
                        "Required":true
                    },
                    "Default": "127.0.0.1"
                },
                "Database":
                {
                    "Type": "String"
                },
                "User":
                {
                    "Type":"String"
                },
                "Password":
                {
                    "Type":"String"
                }
            }
        },
        "Read":
        {
            "Input":
            {
                "Scope":
                {
                    "Type":"String",
                    "Required": true
                },
                "Handle":
                {
                    "Type":"String",
                    "Required": true
                }
            }
        },
        "Write":
        {
            "Input":
            {
                "Scope":
                {
                    "Type":"String",
                    "Required":true
                },
                "Handle":
                {
                    "Type":"String",
                    "Required":true
                },
                "Data":
                {
                    "Type":"String",
                    "Required":true
                }
            }
        }
    }


}
