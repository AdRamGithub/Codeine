<?xml version="1.0" encoding="UTF-8"?>

<project name="Codeine" default="dist">

    <target name="prepare">
        <echo msg="Making directory dist" />
        <mkdir dir="dist" />
        <mkdir dir="reports" />
        <loadfile property="version" file="../docs/VERSION"/>
    </target>

    <taskdef name="phploc" classname="../../../../usr.share.php.phing.tasks.my.PHPLocTask" />

    <target name="phploc" depends="prepare">
         <phploc reportType="txt" reportName="phploc-${version}" reportDirectory="reports">
           <fileset dir="../src">
             <include name="**/*.php" />
             <include name="*.php" />
           </fileset>
         </phploc>
    </target>

    <target name="test" depends="prepare">
        <phpunit>
              <formatter todir="reports" type="xml"/>
              <batchtest>
                <fileset dir="../tests">
                  <include name="**/*Test*.php"/>
                </fileset>
              </batchtest>
        </phpunit>
    </target>
    <target name="build" depends="prepare, test, phploc">
        <echo msg="Building..." />
    </target>

    <target name="tgz" depends="build">
        <echo msg="Creating archive..." />

        <tar destFile="dist/codeine-${version}.tar.gz" compression="gzip">
            <fileset dir="../src">
                <include name="*" />
            </fileset>
        </tar>

        <echo msg="Files copied and compressed in build directory OK!" />
    </target>

    <target name="deb" depends="build">
        <echo msg="Creating debian package..." />
        <mkdir dir="codeine-${version}/usr/share/php/codeine" />
        <mkdir dir="codeine-${version}/usr/share/doc/codeine/" />
        <mkdir dir="codeine-${version}/etc/" />
        <mkdir dir="codeine-${version}/DEBIAN" />

        <copy todir="codeine-${version}/usr/share/php/codeine">
            <fileset dir="../src">
                <include name="*/**" />
            </fileset>
        </copy>

        <copy todir="codeine-${version}/etc/">
            <fileset dir="../etc">
                <include name="*/**" />
            </fileset>
        </copy>

        <copy todir="codeine-${version}/usr/share/doc/codeine/">
            <fileset dir="../docs">
                <include name="*/**" />
            </fileset>
        </copy>

        <copy todir="codeine-${version}/DEBIAN">
            <fileset dir="../DEBIAN/">
                <include name="*/**" />
            </fileset>
        </copy>

        <exec command="dpkg --build 'codeine-${version}' dist/ " dir="..//" />

    </target>

    <target name="dist" depends="tgz,deb">
        <echo msg="Files copied and compressed in build directory OK!" />
    </target>
</project>