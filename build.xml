<?xml version="1.0" encoding="UTF-8"?>

<project name="FooBar" default="dist">

    <!-- ============================================  -->
    <!-- Target: prepare                               -->
    <!-- ============================================  -->
    <target name="prepare">
        <echo msg="Making directory ./build" />
        <mkdir dir="./build" />
    </target>


    <taskdef name="phploc" classname="phing.tasks.my.PHPLocTask" />
       <target name="phploc">
         <tstamp>
           <format property="check.date.time" pattern="%Y%m%d-%H%M%S" locale="en_US"/>
         </tstamp>
         <phploc reportType="txt" reportName="${check.date.time}-report"
                 reportDirectory="phploc-reports">
           <fileset dir=".">
             <include name="**/*.php" />
             <include name="*.php" />
           </fileset>
         </phploc>
    </target>

    <!-- ============================================  -->
    <!-- Target: build                                 -->
    <!-- ============================================  -->
    <target name="build" depends="prepare,phploc">
        <echo msg="Copying files to build directory..." />

        <copy file="*" tofile="./build/" />

    </target>


    <!-- ============================================  -->
    <!-- (DEFAULT)  Target: dist                       -->
    <!-- ============================================  -->
    <target name="dist" depends="build">
        <echo msg="Creating archive..." />

        <tar destfile="./build/codeine.tar.gz" compression="gzip">
            <fileset dir="./build">
                <include name="*" />
            </fileset>
        </tar>

        <echo msg="Files copied and compressed in build directory OK!" />
    </target>
</project>